---
const voteA = 10;
const voteB = 30;
const voteC = 40;
const voteD = 21;
---

<div class="header">
  <div class="percent" id="percent-a">{voteA}%</div>
  <div class="percent" id="percent-b">{voteB}%</div>
  <div class="percent" id="percent-c">{voteC}%</div>
  <div class="percent" id="percent-d">{voteD}%</div>
</div>
<div class="main">
  <div class="bar-parent">
    <div id="public-a" class="bar-content" style={"height:" + voteA + "%;"}>
    </div>
  </div>
  <div class="bar-parent">
    <div id="public-b" class="bar-content" style={"height:" + voteB + "%;"}>
    </div>
  </div>
  <div class="bar-parent">
    <div id="public-c" class="bar-content" style={"height:" + voteC + "%;"}>
    </div>
  </div>
  <div class="bar-parent">
    <div id="public-d" class="bar-content" style={"height:" + voteD + "%;"}>
    </div>
  </div>
</div>
<div class="footer">
  <div class="letter">A</div>
  <div class="letter">B</div>
  <div class="letter">C</div>
  <div class="letter">D</div>
</div>
<button class="survey-btn" title="Encuestar al pÃºblico">ENCUESTAR</button>
<style>
  .header {
    margin-top: 30px;
  }
  .header,
  .footer,
  .main {
    display: flex;
    justify-content: space-around;
    gap: 10px;
    color: white;
  }

  .header {
    padding-top: 10px;
  }

  .footer {
    color: yellow;
  }

  .main {
    height: 200px;
    margin-top: 2px;
    margin-bottom: 2px;
    border-radius: 4px;
    border: 1px solid white;
  }

  .bar-parent {
    height: 100%;
    position: relative;
    cursor: pointer;
  }

  .bar-content {
    background-color: lightblue;
    position: absolute;
    bottom: 0px;
    left: -10px;
    width: 20px;
    transition: height 2s;
    /* no va xd */
  }

  .survey-btn {
    background-color: transparent;
    width: 100%;
    padding: 6px;
    color: white;
    border: 1px solid white;
    margin-top: 10px;
    background-color: #171929;
    border-radius: 4px;

    transition: border 0.8s;

    &&:hover {
      border: 1px solid #171929;
      cursor: pointer;
    }
  }
</style>
